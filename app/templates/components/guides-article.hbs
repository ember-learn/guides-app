{{#unless (eq version currentVersion)}}
 <div class="old-version-warning">
   <i class="icon-attention-circled"></i><strong>Old Guides - </strong>You are viewing the guides for Ember {{version}}.
    <button onclick={{action "selectVersion" currentVersion}} class="btn">VIEW {{currentVersion}} </button>
 </div>
{{/unless}}

<a href="https://github.com/ember-learn/guides-source/edit/master/guides/{{page.currentVersion}}/{{model.id}}.md"
  target="_blank" class="edit-page icon-pencil">Edit Page</a>

<h1>
  {{page.currentPage.title}}
</h1>
<hr>

{{markdown-to-html model.content extensions='showdown-section-groups'}}

{{chapter-links pages=pages}}
